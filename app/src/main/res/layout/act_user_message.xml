<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">


        <include layout="@layout/title_layout" />


        <RelativeLayout
            android:id="@+id/person_img_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/image1"
                android:text="头像"
                android:textColor="#999999"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/image1_next"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/next_xia" />

            <com.myp.meiyuan.widget.AvatarImageView
                android:id="@+id/person_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/image1_next"
                android:scaleType="centerCrop"
                android:src="@drawable/person_img" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />

        <RelativeLayout
            android:id="@+id/person_name_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/image1"
                android:text="姓名"
                android:textColor="#999999"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/image"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/next_xia" />

            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toLeftOf="@+id/image"
                android:textColor="#999999"
                android:textSize="14dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />


        <RelativeLayout
            android:id="@+id/sex_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/image1"
                android:text="性别"
                android:textColor="#999999"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/image01"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/next_xia" />


            <TextView
                android:id="@+id/person_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toLeftOf="@+id/image01"
                android:textColor="#999999"
                android:textSize="14dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />

        <RelativeLayout
            android:id="@+id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="电话"
                android:textColor="#999999"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/image02"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/next_xia" />


            <TextView
                android:id="@+id/person_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toLeftOf="@+id/image02"
                android:textColor="#999999"
                android:textSize="14dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />

        <RelativeLayout
            android:id="@+id/shouji_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/image1"
                android:text="手机"
                android:textColor="#999999"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/image04"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/next_xia" />


            <TextView
                android:id="@+id/person_shouji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toLeftOf="@+id/image04"
                android:textColor="#999999"
                android:textSize="14dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />


        <RelativeLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/image1"
                android:text="邮箱"
                android:textColor="#999999"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/image05"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/next_xia" />

            <TextView
                android:id="@+id/person_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toLeftOf="@+id/image05"
                android:textColor="#999999"
                android:textSize="14dp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />


        <RelativeLayout
            android:id="@+id/gongsi_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/image1"
                android:text="公司"
                android:textColor="#999999"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/image06"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/next_xia" />


            <TextView
                android:id="@+id/person_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toLeftOf="@+id/image06"
                android:textColor="#999999"
                android:textSize="14dp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />


        <RelativeLayout
            android:id="@+id/bumen_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/image1"
                android:text="部门"
                android:textColor="#999999"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/image08"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/next_xia" />

            <TextView
                android:id="@+id/person_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toLeftOf="@+id/image08"
                android:textColor="#999999"
                android:textSize="14dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />


        <RelativeLayout
            android:id="@+id/adress_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/white">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/image1"
                android:text="地址"
                android:textColor="#999999"
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/imaeg"
                android:layout_width="9dp"
                android:layout_height="17dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/next_xia" />


            <TextView
                android:id="@+id/person_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toLeftOf="@+id/imaeg"
                android:textColor="#999999"
                android:textSize="14dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1" />


        <EditText
            android:id="@+id/edit_dapeng"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:hint="请输入详细地址"
            android:maxLength="15"
            android:paddingLeft="25dp"
            android:textColor="#999999"
            android:textColorHint="#d9d9d9"
            android:textSize="15dp" />

    </LinearLayout>
</ScrollView>